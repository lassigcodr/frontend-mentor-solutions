---
import { formatDate } from '../js/utils.js';

const { title, slug, publishedAt } = Astro.props;
---

<article class="article-item">
    <h3>
        <a href={`/blog/${slug}`}>
            {title}
        </a>
    </h3>
    <p>
        {formatDate(publishedAt)}
    </p>
    <slot></slot>
</article>

<style>
    .article-item {
        display: flex;
        flex-direction: column;
        gap: var(--space-100);
    }
    
    .article-item h3 {
        font-size: 1.25rem;
        font-weight: var(--fw-semibold);
        line-height: 1.3;
        letter-spacing: -0.5px;
    }

    .article-item p {
        font-size: 1rem;
        font-style: italic;
        line-height: 1.3;
        letter-spacing: -0.2px;
    }
</style>