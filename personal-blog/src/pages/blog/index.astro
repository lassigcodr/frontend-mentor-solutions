---
import articlesData from "../../data/data.json"
import MainLayout from "../../layouts/MainLayout.astro"
import ArticleListItem from "../../components/ArticleListItem.astro"
---

<MainLayout>
    <section class="article-section">
        <h1 class="page-title">
            My Articles
        </h1>
        <p>
            Below are all my recent blog posts. Click on any title to read the full article.
        </p>
        {
            articlesData.map(({ title, slug, publishedAt, description }) => (
                <ArticleListItem title={title} slug={slug} publishedAt={publishedAt}>
                    <p class="article-description">
                        {description}
                    </p>
                </ArticleListItem>
            ))
        }
    </section>
</MainLayout>